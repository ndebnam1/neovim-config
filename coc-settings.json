	//codelns
	"codeLens.enable": true,
	"java.referencesCodeLens.enabled": true,
	"java.completion.enabled": true,
	"java.jdt.ls.vmargs": "-javaagent:/usr/.local/share/nvim/lombok/lombok.jar",

	//lists
	"list.indicator": ">",
	"list.selectedSignText": "~~ ",

	//autoformat
	"coc.preferences.formatOnType": true,
	"coc.preferences.formatOnSaveFileTypes": {
		"css",
		"markdown",
		"javascript",
		"html",
		"json",
		"java",
		"python"
	},
	"coc.preferences.hoverTarget": "float",


	//cpp config
	"clangd.enabled": true,
	"clangd.arguments": [],
	"clangd.checkUpdates": false,
	"clangd.disableCompletion": false,
	"clangd.disableDiagnostics": false,
	"clangd.displaySnippetCompletion": false,
	"clangd.disableProgressNotifications": false,



	//python config
	"python.linting.enabled": false,
  "python.linting.pylintEndabled": false,
  "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/15.0.6/clangd_15.0.6/bin/clangd",


  "languageserver": {
	  "ccls": {
		  "command":"ccls",
		  "filetpyes": ["c","cpp","c++","objc","objcpp"],
		  "rootPatterns": [".ccls", "compile_commands.json", "./git", ".hg/"],"initializationOptions": {
			  "cache": {
				  "directory": "/tmp/ccls"
			  }
		  }
	  }
