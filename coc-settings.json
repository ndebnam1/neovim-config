	"suggest.completionItemKindLables": {
		"text": "t",
		"method": "m",
		"function": "f"
	},
	"snippets.priority":1,
	"yank.priority": 1,
	"suggest.languageSourcePriority": 99,
	"coc.source.file.priority": 2,
	"coc.source.buffer.priority": 3,
	"coc.source.buffer.priority": 4,

	// diagnostics
	"diagnostic.errorSign": "âŒ§  ",
